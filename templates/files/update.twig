<form action="/files/update" method="post" class="modal fade" id="updateFileModal">
    <input type="hidden" id="updateFileId" name="id">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info text-bg-info px-3 py-2">
                <h2 class="h6 modal-title">Rename file</h2>
            </div>
            <div class="modal-body px-3 py-2">
                <div class="mb-2">
                    <label for="updateFileTitle" class="form-label small">File title</label>
                    <input type="text" id="updateFileTitle" name="title" class="form-control form-control-sm" required>
                </div>
            </div>
            <div class="modal-footer px-3 py-2">
                <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-sm btn-info">Rename</button>
            </div>
        </div>
    </div>
</form>

{% block scripts %}
    <script>
        document.getElementById('updateFileModal').addEventListener('show.bs.modal', (e) => {
            document.getElementById('updateFileId').value = e.relatedTarget.dataset.id;
            document.getElementById('updateFileTitle').value = e.relatedTarget.dataset.title;
        });
    </script>
{% endblock %}
