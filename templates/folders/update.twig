<form action="/folders/update" method="post" class="modal fade" id="updateFolderModal">
    <input type="hidden" id="updateFolderId" name="id">
    <input type="hidden" name="parentId" value="{{ folder.parentId }}">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info text-bg-info px-3 py-2">
                <h2 class="h6 modal-title">Rename folder</h2>
            </div>
            <div class="modal-body px-3 py-2">
                <div class="mb-2">
                    <label for="updateFolderName" class="form-label small">Folder name</label>
                    <input type="text" id="updateFolderName" name="name" class="form-control form-control-sm" required>
                </div>
            </div>
            <div class="modal-footer px-3 py-2">
                <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-sm btn-info">Rename</button>
            </div>
        </div>
    </div>
</form>

{% block scripts %}
    <script>
        document.getElementById('updateFolderModal').addEventListener('show.bs.modal', (e) => {
            document.getElementById('updateFolderId').value = e.relatedTarget.dataset.id;
            document.getElementById('updateFolderName').value = e.relatedTarget.dataset.name;
        });
    </script>
{% endblock %}
